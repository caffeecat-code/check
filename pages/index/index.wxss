@import "/styles/style.wxss";
.main{
  width: 85%;
  /* height: 1000rpx; */
  margin: 0 auto;
  padding-top:1rpx;
  /* overflow: hidden; */
}
.healthy{
  width: 100%;
  line-height: 30rpx;
  margin-top: 30rpx;
}
.healthy text:nth-child(1){
  color: #6e8cfa;
  float: left;
}
.healthy text:nth-child(2){
  float: left;
  margin-left: 8rpx;
  font-size: 30rpx;
}
.healthy text:nth-child(3){
  font-size: 24rpx;
  color: #ccc;
  float: right;
  padding-bottom: 1rpx;
}
.main .fun{
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 2rpx 20rpx 0px rgba(213, 213, 213, 0.6);
    width: 100%;
    border-radius: 20rpx;
    height: auto;
    margin-top: 80rpx;
}
.fun .my-icon{
  font-size: 70rpx;
  color:#4e8cee;
  height: 60rpx;
  width: 60rpx;
}
.fun .text{
  font-size: 25rpx;
}
.fun .col{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:  flex-start;
}
.fun .col .row{
  flex: 1;
  width: 25%;
  height: 130rpx;
  margin-top: 15rpx;
  min-width: 25%;
  max-width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
